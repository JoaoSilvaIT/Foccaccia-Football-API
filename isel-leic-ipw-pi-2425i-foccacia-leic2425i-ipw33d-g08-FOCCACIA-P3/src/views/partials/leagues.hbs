{{! Purpose: Display a list of leagues }}
<section class='container p-2'>
  <h2> List of Leagues: </h2>

  <!-- Show a league in each row of a table -->
  <table class='table text-nowrap'>
    <tr>
      <th> Name </th>
      <th> Country </th>
      <th> Type </th>
      <th> Logo </th>
    </tr>
    {{#each leagues}}
      <tr>
        <td> {{this.league.name}} </td>
        <td> {{this.country.name}} </td>
        <td> {{this.league.type}} </td>
        <td>
          <img
            class='img-fluid'
            src='{{this.league.logo}}'
            alt='{{this.league.name}} Logo'
          />
        </td>
      </tr>
    {{/each}}
  </table>
</section>