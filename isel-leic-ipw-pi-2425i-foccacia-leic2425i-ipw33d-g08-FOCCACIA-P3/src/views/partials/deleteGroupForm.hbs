<form
  action='/site/groups/delete'
  method='POST'
  class='delete-group-form d-inline-block'
>
  <!-- Hidden input to send the group ID -->
  <input type='hidden' name='groupId' value='{{group.id}}' />

  <!-- Confirmation button -->
  <button
    type='submit'
    class='btn btn-danger'
    style='padding: 6px 20px; border-radius: 5px; background-color: rgb(255, 0, 0); color: white; border-color: rgb(255, 0, 0);'
  >
    Delete Group
  </button>
</form>